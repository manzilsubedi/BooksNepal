@model IEnumerable<BooksNepal.Models.ApplicationType>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;Create New ApplicationType
            </a>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Application Type
                    </th>
                    <th>
                         Name
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Id</td>
                        <td width="50%">@obj.Name</td>
                
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                            <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                                </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <p>No Type Exist</p>
    }

</div>